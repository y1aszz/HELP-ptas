<h1 class="h1index" >Informações do Cadastro <3</h1>
<a class="cadastrar" href="/pessoas/criar">Cadastrar</a>
    <div class="grid">

    <% pessoas.forEach((pessoa) => { %>
        <div>
        <%= pessoa.nome %>
    </div>
    <div>
        <%= pessoa.sobrenome %>
    </div>
    <div>
        <%= pessoa.idade %>
    </div>

    <div>
        <a class="delete" href="/pessoas/delete?id=<%=pessoa.id%>">Delete</a>
    </div>

    

    <% }) %> 
</div>   



